@{
    ViewBag.Title = "Project Info";
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <!-- Meta -->
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />

    <!-- Title -->
    <title>Projects Form</title>

    <!-- Links -->
    <link rel="stylesheet" href="~/Content/projectInfo.css" />
    <link rel="stylesheet" href="~/Content/Site.css" />

    <!-- Google fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600;700&display=swap" rel="stylesheet" />
</head>
<body>

    <!-- ================= HEADER AND NAVIGATION ================= -->
    <header>
        <a class="logo" href="/">
            <img src="~/Content/Images/LungisaLogo.png" alt="Lungisa Logo">
        </a>

        <nav>
            <ul>
                <li><a href="/Admin/AdminDashboard" class="nav-link">DASHBOARD</a></li>
                <li><a href="/Admin/Donations" class="nav-link">DONATIONS</a></li>
                <li><a href="/Admin/ProjectInfo" class="nav-link active">PROJECTS</a></li>
                <li><a href="/Admin/Events" class="nav-link">EVENTS</a></li>
                <li><a href="/Admin/Users" class="nav-link">USER ACCOUNTS</a></li>
                <li><a href="/Admin/NewsInfo" class="nav-link">NEWS ARTICLES</a></li>
                <li><a href="/Admin/Volunteer" class="nav-link">VOLUNTEER SIGNUPS</a></li>
            </ul>
        </nav>
    </header>

    <!-- ================= MANAGE PROJECTS ================= -->
    <div class="container">
        <!-- ================= HEADING ================= -->
        <h1>Manage Projects</h1>
        <p>Add, edit or delete organisational projects.</p>
        <section class="section-card1">
            <!-- ================= FORM ================= -->
            <h2>Add New Project</h2>
            <form>
                <div class="form-group"><label>Title</label><input type="text" required></div>
                <label for="project-type">Payment Method</label>
                <div class="project-header">
                    <!-- Inside the <div class="panel"> that holds project type info -->
                    <select id="project-type" class="dropdown-project">
                        <option value="" disabled selected>Select a project type</option>
                        <option value="completed">Completed</option>
                        <option value="currently">Current</option>
                        <option value="upcoming">Upcoming</option>
                    </select>
                </div>
                <div class="form-group"><label>Description</label><textarea rows="4" required></textarea></div>
                <div class="form-group"><label>Banner Image</label><input type="file" accept="image/*"></div>
                <div class="form-group"><label>Start Date</label><input type="date" /></div>
                <div class="form-group"><label>End Date</label><input type="date" /></div>
                <button class="btn-save">Save Project</button>
            </form>
        </section>
        <br />
        <br />
        <!-- ================= LIST OF EXISTING PROJECTS ================= -->
        <section class="section-card2">
            <h2>Existing Projects</h2>
            <table>
                <thead>
                    <tr>
                        <th>Title</th>
                        <th>Last Updated</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>Community Health Day 2025</td>
                        <td>2025-08-01</td>
                        <td><a class="btn-edit" href="#">Edit</a> <a class="btn-delete" href="#" >Delete</a></td>
                    </tr>
                    <tr>
                        <td>Youth Skills Camp</td>
                        <td>2025-07-28</td>
                        <td><a class="btn-edit" href="#">Edit</a> <a class="btn-delete" href="#" >Delete</a></td>
                    </tr>
                </tbody>
            </table>
        </section>
    </div>
</body>
</html>
