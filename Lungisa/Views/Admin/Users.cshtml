                <div class="form-group"><label>Email</label><input type="email" required></div>
                <div class="form-group">
                    <label>Role</label>
                    <select>
                        <option>Administrator</option>
                        <option>Manager</option>
                        <option>Volunteer</option>
                    </select>
                </div>
                <button class="btn">Create Account</button>
            </form>
        </section>

