@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title></title>
</head>
<body>
    <header>
        <h1>Post News Articles</h1>
        <p>Create, schedule and publish stories.</p>
    </header>

    <div class="container">
        <section class="section-card">
            <h2>New Article</h2>
            <form>
                <div class="form-group"><label>Headline</label><input type="text" required></div>
                <div class="form-group"><label>Summary</label><textarea rows="2" required></textarea></div>
                <div class="form-group"><label>Body</label><textarea rows="8" required></textarea></div>
                <div class="form-group"><label>Featured Image</label><input type="file" accept="image/*"></div>
                <button class="btn">Publish</button>
            </form>
        </section>

        <section class="section-card">
            <h2>Drafts & Published</h2>
            <table>
                <thead><tr><th>Title</th><th>Status</th><th>Date</th><th>Actions</th></tr></thead>
                <tbody>
                    <tr>
                        <td>Health Day Success Story</td>
                        <td>Published</td>
                        <td>2025-08-05</td>
                        <td><a class="btn" href="#">Edit</a></td>
                    </tr>
                    <tr>
                        <td>Upcoming Youth Camp</td>
                        <td>Draft</td>
                        <td>—</td>
                        <td><a class="btn" href="#">Edit</a> <a class="btn" style="background:#ef4444">Delete</a></td>
                    </tr>
                </tbody>
            </table>
        </section>
    </div>
</body>
</html>
