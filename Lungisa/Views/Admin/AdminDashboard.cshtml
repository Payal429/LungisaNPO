<!-- The Admin Dashboard page of the Lungisa NPO website is a central hub to oversee every aspect of Lungisa’s operations—manage projects, 
    donations, users, news, events and volunteer sign-ups from one intuitive interface. -->
@{
    ViewBag.Title = "Admin Dashboard";
    Layout = null;
}

<!DOCTYPE html>

<html>
<!-- Meta -->
<meta charset="utf-8" />
<meta name="viewport" content="width=device-width" />

<!-- Title -->
<title>Home</title>

<!-- Links -->
<link rel="stylesheet" href="~/Content/admin.css" />
<link rel="stylesheet" href="~/Content/Site.css" />
<link rel="icon" type="image/png" sizes="32x32" href="~/Content/Images/LOGOLungisa.png">

<!-- Google fonts -->
<link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600;700&display=swap" rel="stylesheet" />

<body>
    <!-- ================= HEADER ================= -->
    <header>
        <a class="logo" href="/">
            <img src="~/Content/Images/LungisaLogo.png" alt="Lungisa Logo">
        </a>
        <h1>Admin Dashboard</h1>
        <p>Manage Lungisa’s back-office in one place.</p>
    </header>

    <!-- ================= GRIDS ================= -->
    <!-- ================= 1. PROJECTS ================= -->
    <div class="container">
        <!-- 1 Projects -->
        <div class="card">
            <img class="thumb" src="https://images.unsplash.com/photo-1552664730-d307ca884978?auto=format&fit=crop&w=600&q=80" alt="Projects">
            <div class="card-body">
                <div class="icon"><i class="material-icons">folder</i></div>
                <h3>Projects</h3>
                <p>Create, edit or delete organisational projects and assign managers.</p>
                <a class="card-btn" href="~/Views/Admin/ProjectsForm.cshtml">Manage Projects</a>
            </div>
        </div>
        <!-- ================= 2. DONATIONS ================= -->
        <div class="card">
            <img class="thumb" src="https://images.unsplash.com/photo-1559027615-cd4628902d4a?auto=format&fit=crop&w=600&q=80" alt="Donations">
            <div class="card-body">
                <div class="icon"><i class="material-icons">favorite</i></div>
                <h3>Donations</h3>
                <p>Track incoming gifts, download donor reports and issue receipts.</p>
                <a class="card-btn" href="/admin/donations">Manage Donations</a>
            </div>
        </div>
        <!-- ================= 3. USER ACCOUNTS ================= -->
        <div class="card">
            <img class="thumb" src="https://images.unsplash.com/photo-1520333789090-1afc82db536a?auto=format&fit=crop&w=600&q=80" alt="Users">
            <div class="card-body">
                <div class="icon"><i class="material-icons">people</i></div>
                <h3>User Accounts</h3>
                <p>Add staff, assign roles, reset passwords and audit activity.</p>
                <a class="card-btn" href="/admin/users">Manage Users</a>
            </div>
        </div>
        <!-- ================= 4. NEWS ARTICLES ================= -->
        <div class="card">
            <img class="thumb" src="https://images.unsplash.com/photo-1504711434969-e33886168f5c?auto=format&fit=crop&w=600&q=80" alt="News">
            <div class="card-body">
                <div class="icon"><i class="material-icons">article</i></div>
                <h3>News Articles</h3>
                <p>Write, schedule and publish stories to the public site.</p>
                <a class="card-btn" href="/admin/news">Create Post</a>
            </div>
        </div>
        <!-- ================= 5. VOLUNTEER SIGN-UPS ================= -->
        <div class="card">
            <img class="thumb" src="https://images.unsplash.com/photo-1559027666-8dc7508f0a6d?auto=format&fit=crop&w=600&q=80" alt="Volunteers">
            <div class="card-body">
                <div class="icon"><i class="material-icons">volunteer_activism</i></div>
                <h3>Volunteer Sign-ups</h3>
                <p>Review applications, approve shifts and export contact lists.</p>
                <a class="card-btn" href="/admin/volunteers">View Sign-ups</a>
            </div>
        </div>
        <!-- ================= 6. EVENTS ================= -->
        <div class="card">
            <img class="thumb" src="https://images.unsplash.com/photo-1540575467063-178a50c2df87?auto=format&fit=crop&w=600&q=80" alt="Events">
            <div class="card-body">
                <div class="icon"><i class="material-icons">event</i></div>
                <h3>Events</h3>
                <p>Add upcoming events, edit details and manage RSVPs.</p>
                <a class="card-btn" href="/admin/events">Manage Events</a>
            </div>
        </div>
    </div>
</body>


